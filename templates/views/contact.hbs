            <div class="form-wrap">
                <form action="https://formspree.io/f/moqzzdlg" method="POST">
                    <h2 class="form-title">Send us a message</h2>
                    <div class="form-fields">
                        <div class="form-group">
                            <input type="text" id="val" class="fname" name="name" placeholder="Name" autocomplete="off" required >
                        </div>
                        <div class="form-group">
                            <input type="text" id="val" class="lname" name="address" placeholder="Address" autocomplete="off" required >
                        </div>
                        <div class="form-group">
                            <input type="email" id="val" class="email" name="email" placeholder="Mail" autocomplete="off" required >
                        </div>
                        <div class="form-group">
                            <input type="number" id="val" class="phone" name="number" placeholder="Phone" autocomplete="off" required>
                        </div>
                        <div class="form-group tg">
                            <textarea name="message" id="val" name="message" placeholder="Write your message" autocomplete="off"></textarea>
                        </div>
                    </div>
                    <input type="submit" id="btn" value="Send Message" class="submit-button">
                </form>
            </div>
        </div>
    </section>
</body>
<script>
    let btn = document.getElementById('btn');
    let userVal = document.querySelectorAll('#val');
    btn.addEventListener('click',()=>{
        
            function fun(){
                userVal.forEach((ele)=>{
                    ele.value="";
                });
            }
            setTimeout(fun,2000);
       
    })
</script>
